@model AddCustomerViewModel
<div class="row" id="cancel-row">

    <!-- Add Customer Modal -->
    <div class="modal fade " id="addCustomerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">

                <div class="modal-header" id="registerModalLabel">
                    <h4 class="modal-title">Add a new customer</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <form class="mt-0" asp-action="AddCustomer" asp-controller="Home" asp-antiforgery="true" method="post">
                            <div class="form-row mt-1">
                                <label for="fullName">Name</label>
                                <input type="text" asp-for="Name" required class="form-control" id="lFullName" />
                            </div>
                            <div class="form-row mt-1">
                                <div class="form-group col-md-4 mb-4">
                                    <label for="fullName">
                                        Phone Number
                                    </label>
                                    <input type="number" asp-for="PhoneNumber" class="form-control" id="lEmail" />
                                </div>
                                <div class="form-group col-md-4 mb-4">
                                    <label for="fullName">
                                        ID or Passport Number
                                    </label>
                                    <input type="number" asp-for="IdNumber" class="form-control" id="lPassword" />
                                </div>
                                <div class="form-group col-md-4 mb-4">
                                    <label for="fullName">
                                        Email Address
                                    </label>
                                    <input type="email" asp-for="Email" class="form-control" id="lPassword" />
                                </div>
                            </div>
                            <div class="form-row mt-1">
                                <div class="form-group col-md-4 mb-4">
                                    <label for="fullName">
                                        Website
                                    </label>
                                    <input type="url" asp-for="Website" class="form-control" id="lPassword" />
                                </div>
                                <div class="form-group col-md-4 mb-4">
                                    <label for="fullName">
                                        Physical Address
                                    </label>
                                    <input type="text" class="form-control" id="lPassword" placeholder="Enter Customer's Physical Address ">
                                </div>
                                <div class="form-group col-md-4 mb-4">
                                    <label for="fullName">
                                        Postal Address
                                    </label>
                                    <input type="text" asp-for="PostalAddress" class="form-control" id="lPassword" />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mt-2 mb-2 btn-block">Submit</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Add Customer Modal end -->
    <!-- Edit Customer Modal -->
